{% extends 'GateBundle::base-admin.html.twig' %}

{% block body %}
    <div class="ui basic segment">
        <div class="ui large breadcrumb">
            <a class="section" href="{{ path('admin') }}">Admin</a>
            <div class="divider"> / </div>
            <a class="section" href="{{ path('admin_quest_index') }}">Quests</a>
            <div class="divider"> / </div>
            <div class="active section">Edit quest "{{ quest.title }}"</div>
        </div>
    </div>

    {{ form_start(edit_form, { 'attr': {'class': 'ui form'} }) }}
    {{ form_errors(edit_form) }}

    <div class="ui segments">
        <div class="ui segment">
            {{ form_widget(edit_form) }}
        </div>
        <div class="ui secondary clearing segment">
            <button class="ui primary labeled icon button" type="submit"><i class="save icon"></i> Save</button>
        </div>
    </div>

    {{ form_end(edit_form) }}
{% endblock %}

{% block javascripts %}
    <script>
        $('#quest_tags').selectize({
            plugins: ['remove_button'],
        });
    </script>
{% endblock %}
