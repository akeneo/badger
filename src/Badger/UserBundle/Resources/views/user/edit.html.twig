{% extends '@Gate/base-admin.html.twig' %}

{% block body %}
    <div class="ui basic segment">
        <div class="ui large breadcrumb">
            <a class="section" href="{{ path('admin') }}">Admin</a>
            <div class="divider"> / </div>
            <a class="section" href="{{ path('admin_user_index') }}">Users</a>
            <div class="divider"> / </div>
            <div class="active section">Edit user "{{ user.username }}"</div>
        </div>
    </div>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="ui segments">
        <div class="ui segment">
            {{ form_widget(edit_form) }}
        </div>
        <div class="ui secondary clearing segment">
            <button class="ui green icon labeled button" type="submit"><i class="save icon"></i> Save</button>
        </div>
    </div>

    {{ form_end(edit_form) }}
{% endblock %}

{% block javascripts %}
    <script>
        $('#user_tags').selectize({
            plugins: ['remove_button'],
        });
    </script>
{% endblock %}
