{% extends '@Gate/base.html.twig' %}

{% block body %}
    <div class="ui main container ir-dashboard">
        <div class="ui grid">
            <div class="four wide column">
                <div class="ui card">
                    <div class="content">
                        <img class="ui avatar image" src="{{ user.profilePicture }}"> <b>{{ user.username }}</b>
                    </div>
                    <div class="content" style="text-align: center;">
                        <div class="ui small statistic">
                            <div class="value">
                                {{ unlockedBadges|length }}
                            </div>
                            <div class="label">
                                badges
                            </div>
                        </div>
                    </div>
                    {% if user.tags|length > 0 %}
                    <div class="extra content">
                        {% for tag in user.tags %}
                            <span class="ui teal small label">{{ tag.name }}</span>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </div>
            <div class="twelve wide column">
                {% if unlockedBadges|length > 0 %}
                    <div class="ui segment">
                        <h2 class="ui dividing header">Unlocked badges</h2>
                        <div class="ui three cards">
                            {% for unlockedBadge in unlockedBadges %}
                                <div class="unlocked card">
                                    <div class="image" style="padding: 10px;">
                                        <span class="ui left corner green label">
                                            <i class="checkmark icon"></i>
                                        </span>
                                        <img src="{{ unlockedBadge.badge.imageWebPath }}">
                                    </div>
                                    <div class="content">
                                        <div class="header"><a href="{{ url('viewbadge', {id: unlockedBadge.badge.id}) }}">{{ unlockedBadge.badge.title }}</a></div>
                                        <div class="description">
                                            {{ unlockedBadge.badge.description }}
                                        </div>
                                    </div>
                                    <div class="extra content">
                                        <small><i class="icon check square"></i> Unlocked on {{ unlockedBadge.unlockedDate|date("d/m/Y") }}</small>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <div class="ui message">
                        <div class="content">
                            <div class="header">
                                No unlocked badge
                            </div>
                            <p>
                                {% if app.user.username == user.username %}
                                    Challenge yourself by trying to unlock your first badges, you can do it! <i class="icon child"></i>
                                {% else %}
                                    This user has no badge for now, come later to see his profile!
                                {% endif %}
                            </p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
