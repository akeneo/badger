{% extends '@Gate/base-admin.html.twig' %}

{% block body %}
    <div class="ui basic segment">
        <div class="ui large breadcrumb">
            <a class="section" href="{{ path('admin') }}">Admin</a>
            <div class="divider"> / </div>
            <a class="section" href="{{ path('admin_tag_index') }}">Tags</a>
            <div class="divider"> / </div>
            <div class="active section">Edit tag "{{ tag.name }}"</div>
        </div>
    </div>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="ui segments">
        <div class="ui segment">
            {{ form_widget(edit_form) }}
        </div>
        <div class="ui secondary clearing segment">
            <button class="ui primary labeled icon button" type="submit"><i class="save icon"></i> Save</button>
        </div>
    </div>

    {{ form_end(edit_form) }}
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#tag_name').on('input', function () {
                var name = $('#tag_name').val();
                // Credits: http://stackoverflow.com/questions/11815883/convert-non-ascii-characters-umlauts-accents-to-their-closest-ascii-equiva
                var code = name.normalize('NFKD').toLowerCase()
                        .replace(/[\u0300-\u036F]/g, '')
                        .replace(/[^\w\s-]/g, '') // remove non-word [a-z0-9_], non-whitespace, non-hyphen characters
                        .replace(/[\s_-]+/g, '-') // swap any length of whitespace, underscore, hyphen characters with a single -
                        .replace(/^-+|-+$/g, ''); // remove leading, trailing -

                $('#tag_code').val(code);
            });
        });
    </script>
{% endblock %}
